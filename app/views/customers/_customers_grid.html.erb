<%= grid(@customers, show_filters: :always, hide_csv_button: true) do |g|
  g.column name: '姓名', attribute: 'name', ordering: false
  g.column name: '手机号', attribute: 'phone_number', ordering: false
  g.column name: '微信open_id', attribute: 'wx_open_id', ordering: false
  g.column name: '注册时间', attribute: 'created_at', ordering: false do |customer|
    customer.created_at.strftime("%Y年 %m月 %d日")
  end
end -%>